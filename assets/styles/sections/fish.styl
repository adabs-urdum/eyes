.fish
  position: absolute;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
  top: 25%;
  background: darken(IrisColor, 50%);
  background-image: radial-gradient(circle at top center, rgba(0, 0, 0, 0) 55%, rgba(0, 0, 0, 1));
  width: BS * 800;
  height: BS * 600;
  border-radius: 50% 50% 30% 30%;
  box-shadow: inset 0 0 BS*20 rgba(255,255,255,0.8);
  overflow: hidden;
  &:after
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: 40% 40% 10% 10%;
    background-image: radial-gradient(circle at 50% 20%, rgba(255, 255, 255, 0.2), rgba(255, 255, 255, 0) 60%);
  &:before
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: 40% 40% 10% 10%;
    background-image: radial-gradient(circle at 60% 10%, rgba(255, 255, 255, 0.3), rgba(255, 255, 255, 0) 40%);
  &__eyes
    display: flex;
    justify-content: space-around;
    width: 80%;
    margin: 0 auto BS*60;
  &__gills
    display: flex;
    justify-content: space-between;
    width: 100%;
    height: 30%;
    margin-bottom: BS * 65;
  &__gill
    width: 100%;
    height: BS * 10;
    background: linear-gradient(rgba(255,255,255,0.5), rgba(0,0,0,0.8) 20%);
    box-shadow: 0 0 BS*5 rgba(0,0,0,0.9);
    animation: BREATH 8s infinite;
  &__gills_left, &__gills_right
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
  &__gills_left
    width: BS * 230;
    transform: skewX(-20deg);
  &__gills_right
    width: BS * 230;
    transform: skewX(20deg);

@keyframes BREATH {
  80%{
    height: BS * 10;
    background: linear-gradient(rgba(255,255,255,0.5), rgba(0,0,0,0.8) 20%);
  }
  87%{
    height: BS * 17;
    background: linear-gradient(rgba(255,255,255,0.5), rgba(0,0,0,0.8) 20%);
  }
  90%{
    height: BS * 5;
    background: linear-gradient(rgba(255,255,255,0.5), rgba(0,0,0,0.8) 20%);
  }
  100%{
    height: BS * 10;
    background: linear-gradient(rgba(255,255,255,0.5), rgba(0,0,0,0.8) 20%);
  }
}
