TitleFontSize = 12.32vh;

.observer
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  width: 100vw;
  height: 100vh;
  background: radial-gradient(circle at center, darken(#0F00B3, 90%) 45%, darken(#0F00B3, 85%) 80%);
  cursor: none;
  overflow: hidden;
  &__title
    position: absolute;
    bottom: 0;
    left: 0;
    transform: rotate(-90deg);
    transform-origin: top left;
    color: rgba(255,255,255,0.1);
    text-transform: uppercase;
    font-size: TitleFontSize;
    margin-bottom: TitleFontSize * -1.7;
    line-height: TitleFontSize * 0.8;
    white-space: nowrap;
    transition: color 1s ease-out;
    z-index: 11;
    &:hover
      color: rgba(255, 255, 255, 0.5);
  &__subtitle
    font-size: 'calc(%s - 3.55vh)' % (TitleFontSize);
    text-transform: none;
  &__lid
    position: relative;
    width: BS * 150;
    height: BS * 150;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50%;
    background-image: radial-gradient(ellipse at center, rgba(0,0,0,0.4), rgba(0,0,0,0)), radial-gradient(circle at 60% 10%, rgba(255,255,255,0.8), rgba(255,255,255,0) 50%);
    box-shadow: 0 0 BS*50 rgba(0,0,0,0.7);
    &--higher
      transform: translateY(-105%);
  &__sclera
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    width: BS * 140;
    height: BS * 140;
    background: #fff5f5;
    border-radius: 50%;
    overflow: hidden;
    animation-delay: 0.3s;
    box-shadow: inset 0 0 BS*30 rgba(0,0,0,1);
    transition: height 1s;
    &--runAnimation
      animation: BLINK infinite 6s;
    &--squint
      height: BS * 40;
    &:after
      content: '';
      position: absolute;
      width: BS * 150;
      height: BS * 150;
      border-radius: 50%;
      box-shadow: inset 0 0 BS*1 rgba(0,0,0,0.2);
      background: radial-gradient(circle at bottom left, rgba(0,0,0,0.2), rgba(255,255,255,0) 50%), radial-gradient(circle at 60% 5%, rgba(255,255,255,0.8), rgba(255,255,255,0) 40%)
    &:before
      content: '';
      position: absolute;
      width: 100%;
      height: 100%;
      border-radius: 50%;
      box-shadow: inset 0 0 BS*5 rgba(0,0,0,0.1);
  &__iris
    position: absolute;
    top: 50%;
    left: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    width: BS * 80;
    height: BS * 80;
    transition: transform 0.2s;
    background-image: conic-gradient(
        transparent 3.5%, rgba(0,0,0,0.2) 4%, transparent 4.5%,
        transparent 8.5%, rgba(0,0,0,0.3) 9%, transparent 9.5%,
        transparent 13.5%, rgba(0,0,0,0.4) 14%, transparent 14.5%,
        transparent 18.5%, rgba(0,0,0,0.3) 19%, transparent 19.5%,
        transparent 23.5%, rgba(0,0,0,0.3) 24%, transparent 24.5%,
        transparent 28.5%, rgba(0,0,0,0.2) 29%, transparent 29.5%,
        transparent 33.5%, rgba(0,0,0,0.2) 34%, transparent 34.5%,
        transparent 38.5%, rgba(0,0,0,0.3) 39%, transparent 39.5%,
        transparent 43.5%, rgba(0,0,0,0.3) 44%, transparent 44.5%,
        transparent 48.5%, rgba(0,0,0,0.4) 49%, transparent 49.5%,
        transparent 53.5%, rgba(0,0,0,0.3) 54%, transparent 54.5%,
        transparent 58.5%, rgba(0,0,0,0.3) 59%, transparent 59.5%,
        transparent 63.5%, rgba(0,0,0,0.4) 64%, transparent 64.5%,
        transparent 68.5%, rgba(0,0,0,0.3) 69%, transparent 69.5%,
        transparent 73.5%, rgba(0,0,0,0.2) 74%, transparent 74.5%,
        transparent 78.5%, rgba(0,0,0,0.3) 79%, transparent 79.5%,
        transparent 83.5%, rgba(0,0,0,0.4) 84%, transparent 84.5%,
        transparent 88.5%, rgba(0,0,0,0.3) 89%, transparent 89.5%,
        transparent 93.5%, rgba(0,0,0,0.2) 94%, transparent 94.5%,
        transparent 98.5%, rgba(0,0,0,0.3) 99%, transparent 99.5%
    );
    background-color: IrisColor;
    border-radius: 50%;
    transform: translate(-50%, -50%);
    box-shadow: inset 0 0 BS*20 rgba(0,0,0,1);
    &:after
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      border-radius: 50%;
      box-shadow: 0 0 BS*3 rgba(0,0,0,1);
  &__pupil
    position: absolute;
    top: 50%;
    left: 50%;
    display: inline-block;
    width: BS * 40;
    height: BS * 40;
    background: #444;
    border-radius: 50%;
    transform: translate(-50%, -50%);
    transition: width 0.3s ease-out, height 0.3s ease-out, transform 0.2s;
    animation: infinite 3.5s PUPIL_FOCUS;
    box-shadow: inset 0 0 BS*20 rgba(0,0,0,1);
    &:after
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      border-radius: 50%;
      box-shadow: 0 0 BS*10 rgba(0,0,0,2);
  &__bait
    position: absolute;
    top: 0;
    left: 0;
    display: block;
    width: BS * 100;
    height: BS * 100;
    background: radial-gradient(rgba(255,255,255,1) 5%, rgba(255,255,255,0) 25%);
    z-index: 9;
    transition: opacity 0.5s ease-out, transform 0.5s ease-out;
    animation: infinite 3s BLINKING_LIGHT;
    opacity: 1;
    transform: translate(-50%, -50%) scale(1);
    transform-origin: center;
    &--hidden
      opacity: 0;
      animation: none;
      transform: translate(-50%, -50%) scale(0);

@keyframes BLINKING_LIGHT
  0%{
    transform: scale(1) translate(-50%, -50%);
  }
  25%{
    transform: scale(0.9) translate(-50%, -50%);
  }
  50%{
    transform: scale(1.1) translate(-50%, -50%);
  }
  75%{
    transform: scale(0.9) translate(-50%, -50%);
  }
  100%{
    transition: scale(1) translate(-50%, -50%);
  }

@keyframes BLINK {
  87%{
    height: BS * 140;
  }
  92%{
    height: BS * 5;
  }
  95%{
    height: BS * 5;
  }
  100%{
    height: BS * 140;
  }
}

@keyframes PUPIL_FOCUS {
  90%{
    width: BS * 40;
    height: BS * 40;
  }
  95%{
    width: BS * 44;
    height: BS * 44;
  }
  100%{
    width: BS * 40;
    height: BS * 40;
  }
}


@media BreakpointM
  .observer
    &__lid
      width: BS * 250;
      height: BS * 250;
    &__sclera
      width: BS * 240;
      height: BS * 240;
      &--runAnimation
        animation: BLINK-M infinite 6s;
      &:after
        width: BS * 250;
        height: BS * 250;
    &__iris
      width: BS * 140;
      height: BS * 140;
    &__pupil
      width: BS * 60;
      height: BS * 60;
      animation: infinite 3.5s PUPIL_FOCUS-M;
    &__bait
      width: BS * 200;
      height: BS * 200;
    @keyframes BLINK-M {
      87%{
        height: BS * 240;
      }
      92%{
        height: BS * 5;
      }
      95%{
        height: BS * 5;
      }
      100%{
        height: BS * 240;
      }
    }
    @keyframes PUPIL_FOCUS-M {
      90%{
        width: BS * 60;
        height: BS * 60;
      }
      95%{
        width: BS * 66;
        height: BS * 66;
      }
      100%{
        width: BS * 60;
        height: BS * 60;
      }
    }

@media BreakpointXS
  .observer
    TitleFontSizeXS = 8vh;
    &__title
      font-size: TitleFontSizeXS;
      margin-bottom: TitleFontSizeXS * -1.7;
      line-height: TitleFontSizeXS * 0.8;
    &__subtitle
      font-size: 'calc(%s - 4vh)' % (TitleFontSizeXS);
